<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
        <!-- Cron job for automatically Close tickets after inactivity of X days.-->
        <record id="ir_cron_close_tickets_after_inactivity_of_x_days" model="ir.cron">
            <field name="name">Helpdesk: Close idle tickets</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
            <field eval="False" name="doall" />
            <field name="state">code</field>
            <field name="code">model._cron_close_idle_tickets()</field>
            <field eval="False" name="active" />
        </record>

</odoo>
